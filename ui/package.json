{
  "name": "bettergimp-ui",
  "version": "0.1.0",
  "description": "Better GIMP - Modern image editing application built with Electron and React",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"wait-on http://localhost:5173 && npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "NODE_ENV=development electron .",
    "build": "tsc && vite build",
    "build:electron": "npm run build && electron-builder",
    "preview": "vite preview",
    "test": "echo \"Error: no test specified\" && exit 1",
    "electron": "electron ."
  },
  "keywords": [
    "image-editor",
    "electron",
    "react",
    "typescript",
    "gimp"
  ],
  "author": "Better GIMP Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.5.2",
    "concurrently": "^9.2.1",
    "electron": "^27.3.11",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.2",
    "vite": "^5.4.20",
    "wait-on": "^9.0.1"
  },
  "dependencies": {
    "@types/fabric": "^5.3.10",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "fabric": "^5.5.2",
    "lucide-react": "^0.544.0",
    "node-fetch": "^3.3.2",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.8",
    "tailwindcss": "^3.4.17",
    "zustand": "^4.5.7"
  }
}
