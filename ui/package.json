{
  "name": "bettergimp-ui",
  "version": "1.0.2",
  "description": "Better GIMP - Modern image editing application built with Electron and React",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"bun run dev:vite\" \"wait-on http://localhost:5173 && bun run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "NODE_ENV=development electron .",
    "build": "tsc && vite build",
    "build:electron": "bun run build && electron-builder",
    "build:electron:linux": "bun run build && electron-builder --linux",
    "build:electron:win": "bun run build && electron-builder --win",
    "build:electron:mac": "bun run build && electron-builder --mac",
    "preview": "vite preview",
    "test": "echo \"Error: no test specified\" && exit 1",
    "electron": "electron ."
  },
  "keywords": [
    "image-editor",
    "electron",
    "react",
    "typescript",
    "gimp"
  ],
  "author": "Better GIMP Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.5.2",
    "concurrently": "^9.2.1",
    "electron": "^27.3.11",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.2",
    "vite": "^5.4.20",
    "wait-on": "^9.0.1"
  },
  "dependencies": {
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toggle": "^1.1.10",
    "@types/fabric": "^5.3.10",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "fabric": "^5.5.2",
    "lucide-react": "^0.544.0",
    "node-fetch": "^3.3.2",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.8",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^4.5.7"
  },
  "build": {
    "appId": "com.betterps.app",
    "productName": "BetterPS",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js"
    ],
    "linux": {
      "category": "Graphics",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
